@using Microsoft.AspNetCore.Identity
@using EmployeeSystem.Data.DataAccess

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager




        <!-- Topbar Navbar -->
   
            @*<ul class="nav navbar-nav ml-auto mdl-md-0 ">*@
            <ul class="nav navbar-nav  mr-auto ml-md-3 my-2 my-md-0 mw-100  ">
                
                <li class="active nav-link p-2 navbar-expand"><a style=" text-decoration: none; color:aliceblue " asp-controller="Home" asp-action="Index">Home</a></li>
                 <li class="nav-link p-2 "><a  style="text-decoration: none; "asp-area="" asp-controller="Home" asp-action="About">About</a></li>
               
            </ul>


            <div class="topbar-divider d-none d-sm-block"></div>
        
            <!-- Nav Item - User Information -->
            <ul class="nav nvabar-nav navbar-right">

                <li class="nav-item dropdown no-arrow">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Hello @UserManager.GetUserName(User)!</span>
                            <img class="img-profile rounded-circle" src="~/img/avatar.png" height="50px;">
                        </a>

                        <!-- Dropdown - User Information -->
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                Profile
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="dropdown-item" asp-controller="Settings" asp-action="">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Settings
                                </a>

                            }


                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Logout
                            </a>
                            @*<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Logout
                            </a>*@
                        </div>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li ><a style="text-decoration : none; padding: 5px;" asp-area="Identity" asp-page="/Account/Register"><i class=""></i>Register</a></li>
                            <li ><a style="text-decoration : none; padding: 5px;" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt fa-sm fa-fw mr-2 text-gray-400"></i>Login</a>
                        </ul>
                    }
                </li>

            </ul>
  
 