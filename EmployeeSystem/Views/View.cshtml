    <script>
        //start add employee ajax
        $('#employeeAddForm').submit(function (e) {
            e.preventDefault();
            console.log("Clicked");
            //alert("okay");
            $.ajax({
                url: '/Employee/AddEmployee',
                type: 'post',
                dataType: 'json',
                data: $('#employeeAddForm').serialize(),

                error: function (xhr) {
                    console.log(xhr.status);
                    alert("Ooooops! something went wrong!!")
                },

                success: function (response) {
                    console.log(response.value)
                    if (response.key) {
                        swal({
                            title: "Success",
                            text: response.value,
                            html: true,
                            type: "success",
                            showCancelButton: false,
                            confirmButtonColor: "#06ba63",
                            confirmButtonText: "OK",
                            closeOnConfirm: true
                        })
                            .then(() => {
                                window.location.reload()
                            });
                    }
                    else {
                        swal("Error!", response.value, "error");
                    }
                }
            });
        }
        );
        //End add employee ajax}
    </script>
}
<script type="text/javascript">
        function deleteEmployee(employeeId) {
            $(function () {
                swal({
                    title: "Are you sure?",
                    text: "You want to delete this account!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, I am sure!',
                    cancelButtonText: "No, cancel it!",
                    closeOnConfirm: false,
                    closeOnCancel: false
                }).then((result) => {
                    if (result.value) {
                         $.ajax({
                             url: '@Url.Action("Delete", "Employee")',
                             data: { EmployeeId: employeeId },
                             type: 'post',
                             dataType: 'json',
                             success: function (response) {
                                 if (response.key) {
                                     swal({
                                         title: "Success",
                                         text: response.value,
                                         type: "success",
                                         showCancelButton: false,
                                         confirmButtonColor: "#06ba63",
                                         confirmButtonText: "OK",
                                         closeOnConfirm: true
                                     })
                                         .then(() => {
                                             window.location.reload();
                                         });
                                 }
                                 else {
                                     swal({
                                         title: "Error",
                                         text: response.value,
                                         type: "error",
                                         showCancelButton: false,
                                         confirmButtonColor: "#06ba63",
                                         confirmButtonText: "OK",
                                         closeOnConfirm: true
                                     });
                                 }
                             }
                          });
                    } else {
                        swal({
                            title: "Cancelled!",
                            text: "You cancelled deletion process.",
                            icon: "error",
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        }
</script>
